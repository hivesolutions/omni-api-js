{
    "name": "omni-api-js",
    "version": "0.2.2",
    "description": "The Omni API client",
    "keywords": [
        "api",
        "client",
        "omni",
        "hive"
    ],
    "homepage": "https://github.com/hivesolutions/omni-api-js#readme",
    "bugs": {
        "url": "https://github.com/hivesolutions/omni-api-js/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hivesolutions/omni-api-js.git"
    },
    "license": "Apache-2.0",
    "author": {
        "name": "Hive Solutions",
        "url": "https://www.hive.pt"
    },
    "main": "dist/omni.cjs.js",
    "unpkg": "dist/omni.umd.js",
    "module": "dist/omni.esm.js",
    "browser": "dist/omni.umd.js",
    "types": "types/index.d.ts",
    "typings": "types/index.d.ts",
    "files": [
        "LICENSE",
        "dist/**/*",
        "res/**/*",
        "js/**/*.js",
        "test/**/*.js",
        "types/**/*.d.ts"
    ],
    "scripts": {
        "build": "rollup -c",
        "example": "node examples/simple.js",
        "lint": "eslint rollup.config.js \"./{js,test}/**/*.{js,json}\"",
        "lint-fix": "eslint rollup.config.js \"./{js,test}/**/*.{js,json}\" --fix",
        "prettier": "prettier rollup.config.js \"./*.{js,json}\" \"./{js,test}/**/*.{js,json}\" --write",
        "pretty": "npm run prettier && npm run lint-fix",
        "test": "mocha --recursive",
        "upgrade": "npx sort-package-json && ncu -u",
        "watch": "rollup -c -w"
    },
    "dependencies": {
        "yonius": "^0.13.0"
    },
    "devDependencies": {
        "@babel/core": "^7.20.12",
        "@babel/preset-env": "^7.20.2",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^18.0.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "eslint": "^7.23.0",
        "eslint-config-hive": "^0.5.3",
        "mocha": "^8.3.2",
        "mocha-cli": "^1.0.1",
        "npm-check-updates": "^16.6.4",
        "prettier": "^2.8.3",
        "prettier-config-hive": "^0.1.7",
        "rollup": "^2.44.0",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "sort-package-json": "^2.4.1"
    }
}
